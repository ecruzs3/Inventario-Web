@{
    ViewData["HideNavbar"] = false;
    ViewData["Title"] = "Dashboard de Inventario";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-gradient mb-3">📦 Dashboard de Inventario</h1>
        <p class="text-muted fs-5">Administra productos, proveedores y movimientos desde un solo lugar.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card card-elegante text-center">
                <div class="card-body">
                    <i class="bi bi-box-seam display-4 text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Productos</h5>
                    <p class="card-text text-muted">Gestiona los productos del inventario.</p>
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-success rounded-pill px-4 shadow-sm">
                        Ver Productos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-elegante text-center">
                <div class="card-body">
                    <i class="bi bi-truck display-4 text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Proveedores</h5>
                    <p class="card-text text-muted">Administra tus proveedores.</p>
                    <a asp-controller="Proveedores" asp-action="Index" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        Ver Proveedores
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-elegante text-center">
                <div class="card-body">
                    <i class="bi bi-arrow-left-right display-4 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Movimientos</h5>
                    <p class="card-text text-muted">Entradas y salidas de inventario.</p>
                    <a asp-controller="MovimientosInventario" asp-action="Index" class="btn btn-warning text-white rounded-pill px-4 shadow-sm">
                        Ver Movimientos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    body {
        background: #f8f9fa;
    }

    .text-gradient {
        background: linear-gradient(90deg, #198754, #0dcaf0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .card-elegante {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        background: #fff;
    }

    .card-elegante:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
    }

    .card-title {
        font-size: 1.25rem;
    }

    .btn {
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
