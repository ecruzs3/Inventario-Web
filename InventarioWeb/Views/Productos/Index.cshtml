@model IEnumerable<InventarioWeb.Models.Producto>
@{
    ViewData["HideNavbar"] = true;
    ViewData["Title"] = "Productos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary fw-bold">@ViewData["Title"]</h2>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">⬅️ Volver al inicio</a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Producto
        </a>
    </div>
</div>


<table class="table table-striped table-bordered shadow-sm align-middle">
    <thead class="table-primary text-center">
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Proveedor</th>
            <th>Stock</th>
            <th>Stock Mínimo</th>
            <th>Precio Compra</th>
            <th>Precio Venta</th>
            <th>Estado</th>
            <th>Fecha Ingreso</th>
            <th>Fecha Vencimiento</th>
            <th>Fecha Actualizado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@(item.Proveedor?.Nombre ?? "-")</td>
                <td>@item.Stock</td>
                <td>@item.StockMinimo</td>
                <td>@item.PrecioCompra.ToString("C")</td>
                <td>@item.PrecioVenta.ToString("C")</td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>@(item.FechaIngreso?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@(item.FechaVencimiento?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@(item.ActualizadoEn?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

