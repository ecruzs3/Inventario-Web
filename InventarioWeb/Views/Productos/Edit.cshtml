@model InventarioWeb.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<h2 class="text-primary">@ViewData["Title"]</h2>

<form asp-action="Edit" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Codigo" class="form-label"></label>
        <input asp-for="Codigo" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Categoria" class="form-label"></label>
        <input asp-for="Categoria" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Proveedor" class="form-label"></label>
        <input asp-for="Proveedor" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PrecioCompra" class="form-label"></label>
        <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PrecioVenta" class="form-label"></label>
        <input asp-for="PrecioVenta" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="FechaIngreso" class="form-label"></label>
        <input asp-for="FechaIngreso" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="FechaVencimiento" class="form-label"></label>
        <input asp-for="FechaVencimiento" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
