@model InventarioWeb.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<h2 class="text-primary">@ViewData["Title"]</h2>

<form asp-controller="Productos" asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-3">
     @Html.AntiForgeryToken()
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>

     <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ProveedorId" class="form-label"></label>
        <select asp-for="ProveedorId" asp-items="ViewBag.Proveedores" class="form-control">
        </select>
        <span asp-validation-for="ProveedorId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PrecioCompra" class="form-label"></label>
        <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PrecioVenta" class="form-label"></label>
        <input asp-for="PrecioVenta" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Estado" class="form-label"></label>
        <select asp-for="Estado" class="form-select">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FechaVencimiento" class="form-label"></label>
        <input asp-for="FechaVencimiento" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>
