@model InventarioWeb.Models.Producto
@{
    ViewData["Title"] = "Detalle Producto";
}

<h2 class="text-primary">@ViewData["Title"]</h2>

<table class="table table-bordered mt-3">
    <tr><th>Código</th><td>@Model.Id</td></tr>
    <tr><th>Nombre</th><td>@Model.Nombre</td></tr>
    <tr><th>Descripción</th><td>@Model.Descripcion</td></tr>
    <tr><th>Proveedor ID</th><td>@Model.ProveedorId</td></tr>
    <tr><th>Stock</th><td>@Model.Stock</td></tr>
    <tr><th>Stock Mínimo</th><td>@Model.StockMinimo</td></tr>
    <tr><th>Precio Compra</th><td>@Model.PrecioCompra.ToString("C")</td></tr>
    <tr><th>Precio Venta</th><td>@Model.PrecioVenta.ToString("C")</td></tr>
    <tr>
        <th>Estado</th>
        <td>
            @if (Model.Estado)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactivo</span>
            }
        </td>
    </tr>
    <tr>
        <th>Fecha Ingreso</th>
        <td>@(Model.FechaIngreso?.ToString("yyyy-MM-dd") ?? "-")</td>
    </tr>
    <tr>
        <th>Fecha Vencimiento</th>
        <td>@(Model.FechaVencimiento?.ToString("yyyy-MM-dd") ?? "-")</td>
    </tr>
    <tr>
        <th>Fecha Actualización</th>
        <td>@(Model.ActualizadoEn?.ToString("yyyy-MM-dd") ?? "-")</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
