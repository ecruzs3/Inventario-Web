@model InventarioWeb.Models.MovimientoInventario
@{
    ViewData["Title"] = "Nuevo Movimiento";
}

<h2 class="text-primary">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ProductoId" class="form-label">Producto</label>
        <select asp-for="ProductoId" asp-items="ViewBag.Productos" class="form-control">
        </select>
        <span asp-validation-for="ProductoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoMovimiento" class="form-label">Tipo de Movimiento</label>
        <select asp-for="TipoMovimiento" class="form-select">
            <option value="E">Entrada</option>
            <option value="S">Salida</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Nota" class="form-label"></label>
        <textarea asp-for="Nota" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
