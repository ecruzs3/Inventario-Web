@model IEnumerable<InventarioWeb.Models.MovimientoInventario>
@{
    ViewData["HideNavbar"] = true;
    ViewData["Title"] = "Movimientos de Inventario";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary fw-bold">@ViewData["Title"]</h2>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">⬅️ Volver al inicio</a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Movimiento
        </a>
    </div>
</div>


<table class="table table-striped table-bordered shadow-sm align-middle">
    <thead class="table-primary text-center">
        <tr>
            <th>Código</th>
            <th>Producto</th>
            <th>Tipo</th>
            <th>Cantidad</th>
            <th>Nota</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@(item.Producto?.Nombre ?? "-")</td>
                <td>
                    @switch (item.TipoMovimiento)
                    {
                        case "E":
                            @:Entrada
                            break;
                        case "S":
                            @:Salida
                            break;
                        default:
                            @:Desconocido
                            break;
                    }
                </td>
                <td>@item.Cantidad</td>
                <td>@item.Nota</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
